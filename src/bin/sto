re='^[0-1]+([.][0-9]+)?$'
if [ $# -ne 1 ] || ! [[ $1 =~ $re ]]; then
    echo "Usage: sto number[0~1]";
    exit 0;
fi
sed -i s/BackgroundDarkness=.*/BackgroundDarkness="$1"/ ~/.config/xfce4/terminal/terminalrc
